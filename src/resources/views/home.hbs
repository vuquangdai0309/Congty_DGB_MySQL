{{> header}}
<!-- Main Slider Start -->
<div class="main">
    <div class="home-slider">
        <div id="demo" class="carousel slide" data-ride="carousel">
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>
            <div class="carousel-inner">
                <div class="carousel-item active" style="overflow: hidden;">
                    <img src="/img/banner22.jpg" class="img-banner" alt="Los Angeles" id="zoomInImage">
                    <div class="carousel-caption">
                        <h3 class="color-white " id="zoomtext">Nông sản Việt Nam </h3>
                        <p class="color-white ">Công ty chứng nhận chất lượng DGB </p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/img/banner29.jpg" alt="Chicago" class="img-banner">
                    <div class="carousel-caption">
                        <h3 class="color-white ">Sản phẩm nông nghiệp </h3>
                        <p class="color-white ">Chào mừng bạn đã đến với chúng tôi!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/img/banner21.jpg" alt="New York" class="img-banner">
                    <div class="carousel-caption">
                        <h3 class="color-white ">Nâng tầm giá trị Việt </h3>
                        <p class="color-white ">Quản lý chất lượng sản phẩm tốt nhất</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>

    <!-- Main Slider End -->
    <!-- Featured Product Start -->
    <div class="featured-product" style="background-color: rgb(255, 255, 255)">
        <div class="container">
            <div class="section-header">
                <h3>Tại sao nên lựa chọn chúng tôi ?</h3>
                <img src="upload\anh\image-1700109805220.png" alt="" srcset="">
            </div>
            <div class="section-main row">
                <div class="col-md-6 img-main">
                    <img src="/{{gioithieutochuc.image}}" alt="" id="slideImage">
                </div>
                <div class="col-md-6">
                    <div id="content" getcontent="{{gioithieutochuc.content}}"></div>
                </div>
            </div>
        </div>

    </div>
    <!-- Featured Product End -->
    <!-- Recent Product Start -->
    <div class="recent-product" style="background-color: rgb(235 235 235)">
        <div class="container">
            <div class="section-header">
                <h3>Dịch vụ chứng nhận</h3>
                <p>
                   Chưa có nội dung ...
                </p>
            </div>
            <div class="row align-items-center product-slider product-slider-6">
                {{#each showlogo}}
                <div class="col-lg-2" style="border-radius:8%;">
                    <div class="product-item "  style="border-radius:8%;" >
                        <div class="product-image image-hover" >
                            <img src="/{{this.image}}" alt="Product Image">                          
                        </div>
                        <div class="product-content" style="height: 102px; border-radius:8%;">
                             <span class="title-logo center" style="text-align: center; ">
                                {{!-- <p style="font-weight: bold;">{{this.title}}</p> --}}
                                 <div class="title"><a href="/bai-viet/{{this.slug}}">{{this.title}}</a></div>       
                            </span>
                                              
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>
    <!-- Recent Product End -->
    <!-- Brand Start -->
    <div class="brand" style="background-color: rgb(235 235 235)">
        <div class="container">
            <div class="section-header">
                <h3>Đơn vị hợp tác</h3>

            </div>
            <div class="brand-slider">
                <div class="brand-item"><img src="/img/vietgap.png" alt=""></div>
                <div class="brand-item"><img src="/img/vietgap.png" alt=""></div>
                <div class="brand-item"><img src="/img/vietgap.png" alt=""></div>
                <div class="brand-item"><img src="/img/vietgap.png" alt=""></div>
                <div class="brand-item"><img src="/img/vietgap.png" alt=""></div>
                <div class="brand-item"><img src="/img/vietgap.png" alt=""></div>
            </div>
        </div>
    </div>
</div>

<!-- Brand End -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="/js/move.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
{{> footer}}
<script>
    const content = document.getElementById('content')
    const getcontent = content.getAttribute('getcontent')
    content.innerHTML = getcontent

</script>

<script>
    // JavaScript để xóa thuộc tính của thẻ
    document.querySelector('.carousel-caption').style.left = null;
</script>